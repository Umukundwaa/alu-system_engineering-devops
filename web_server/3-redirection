#!/usr/bin/env bash
# Configures Nginx with a 301 redirect for /redirect_me

# Install nginx
apt-get update -y
apt-get install -y nginx

# Create index page with Holberton School
echo "Holberton School" > /var/www/html/index.nginx-debian.html

# Add redirect configuration using sed
sed -i 's|server_name _;|server_name _;\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}|' /etc/nginx/sites-available/default

# Restart nginx without systemctl
service nginx restart